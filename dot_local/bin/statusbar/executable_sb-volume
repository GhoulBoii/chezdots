#!/bin/sh
# Prints the current volume or ðŸ”‡ if muted.

[ $(pactl get-sink-mute @DEFAULT_SINK@ | gawk '{print $2}') = yes ] && echo ðŸ”‡ && exit

vol="$(pactl get-sink-volume @DEFAULT_SINK@ | gawk '{print $5}' | sed 's/.$//')"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon $vol%"
